<Window x:Class="Task_1.Windows.ChangePhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1.Windows"
        mc:Ignorable="d"
        Title="ChangePhone" 
        Height="140" 
        Width="400"
        ResizeMode="NoResize"
        >
    <Grid Margin="0,0,0,1">
        <TextBox 
                x:Name="PhoneNumber"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                TextWrapping="Wrap" 
                Width="380"/>
        <Button Content="Принять изменения" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" Click="Button_Click" Margin="0,53,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128"><Run Language="ru-ru" Text="Введите новый номер"/><LineBreak/><Run Language="ru-ru"/></TextBlock>


    </Grid>
</Window>
